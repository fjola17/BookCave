@model List<BookCave.Models.ViewModels.BookViewModel>


  <body class="background">
    <div class="content">
      <h2>New Releases</h2>
        <ul id="newBooks">
        @foreach(var b in Model)
        {
          <li><a href="#"><img src="@b.CoverImage" alt="CoverImage" height="170px" width="auto" /><a/></li>
          <li><a asp-controller="Book" asp-action="Details" asp-route-id="@b.Id" >@b.Title</a></li>
          <li>@b.Price</li>
        }
        </ul>
      
    </div>
  </body>