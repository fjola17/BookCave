@model List<BookCave.Models.ViewModels.BookViewModel>

@{
    ViewData["Title"] = "Home -";
}
<div id="Front">
  <h1 class="filterHead">Welcome</h1>
  <div class="searchItem borderClass">
    @foreach (var books in Model)
    {
            <li> 
                <p class="book-image"><a asp-controller="Book" asp-action="Details" asp-route-id="@books.Id"><img src="@books.CoverImage" alt="book image" height="300" width="210"></a><br>
                <a asp-controller="Book" asp-action="Details" asp-route-id="@books.Id">@books.Title</a><br>
                Price: $@books.Price</p>
            </li>
    }
  </div>
</div>